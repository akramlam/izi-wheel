# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="IZI Wheel"

# Traditional SMTP Configuration (fallback)
SMTP_HOST=smtp.smtp.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# SMTP.com API Configuration (recommended for better deliverability)
USE_SMTP_COM_API=true
SMTP_COM_API_KEY=your-smtp-com-api-key

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000 