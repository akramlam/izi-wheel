NODE_ENV=development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/iziwheel?schema=public"
REDIS_URL=redis://localhost:6379
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="1d"

# SMTP.com for production
SMTP_HOST="smtp.smtp.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="noreply@iziwheel.com"

# For local development using MailHog
# SMTP_HOST="localhost"
# SMTP_PORT="1025"
# SMTP_SECURE="false"

# Cloudinary for file uploads
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Rate limits for wheel plays (in seconds)
RATE_LIMIT_DAILY=86400   # 24 hours
RATE_LIMIT_WEEKLY=604800 # 7 days
RATE_LIMIT_MONTHLY=2592000 # 30 days 